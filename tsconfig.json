{
  "extends": "./vite.json",
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["app/components/*"],
      "@views/*": ["app/views/*"],
      "@assets/*": ["app/assets/*"],
      "@common/*": ["common/*"]
    }
  }
}
